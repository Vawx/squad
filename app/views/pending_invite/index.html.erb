<div class="col-xs-10 col-xs-offset-1">
  <div style="text-align:center;">
    <% if user_signed_in? %>
      <% @pending.each do |p| %>
        <div class="row">
            <p>You have an invite to join <b><%= Project.find(p.project_id).name %> </b>from: <b><%= p.invite_email %></b></p>
            <div style="">
              <%= link_to "Join", edit_pending_invite_path(p.id, "join"), class: "btn btn-primary", id: "joinPending" %>
              <%= link_to "Ignore", pending_invite_path(p.id), method: :delete, class: "btn btn-danger", id: "ignorePending" %>
            </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
