<%= link_to profile_project_issue_path(current_user.profile, @project, object) do %>
  <% if object.severity == "Very Important" %>
    <div class="issue_form_very_important">
      <h3><%= ApplicationHelper::limit_chars( object.content, 55 ) %></h3>
      <div class="">
        <h6 style="text-align:right;">Created: <%= ApplicationHelper::convert_to_readable_time(object.created_at) %></h6>
      </div>
    </div>
  <%elsif object.severity == "Important" %>
    <div class="issue_form_important">
      <h3><%= ApplicationHelper::limit_chars( object.content, 55 ) %></h3>
      <div class="">
        <h6 style="text-align:right;">Created: <%= ApplicationHelper::convert_to_readable_time(object.created_at) %></h6>
      </div>
    </div>
  <%elsif object.severity == "Not Important" %>
    <div class="issue_form_not_important">
      <h3><%= ApplicationHelper::limit_chars( object.content, 55 ) %></h3>
      <h6 style="text-align:right;">Created: <%= ApplicationHelper::convert_to_readable_time(object.created_at) %></h6>
    </div>
    </div>
  <%end%>
<%end%>
