
<div class="row">
  <div class="form" style="text-align:center;">
    <h1><%= @project.name %></h1>
    <% if is_admin?(current_user, @project) %>
      <h6 class="danger-text">Admin: You</h6>
    <%else%>
      <h6 class="danger-text">Admin: <%= User.find( @project.admin_id ).email %></h6>
    <%end%>
  </div>

  <div class="col-xs-3 col-xs-offset-1">
    <% if is_admin?(current_user, @project)%>
      <%= link_to "Admin", profile_project_admin_index_path(current_user.profile, @project), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-7 col-xs-offset-1">
    <h2>Bugs / Tasks</h2>
  </div>
  <div class="col-xs-3 col-xs-offset-0">
    <h2>Users</h2>
    <% @project.profiles.each do |pr| %>
      <p class="form">
        <%=User.find(pr.user_id).email%> [<%= pr.user_name %>]
      </p>
    <%end%>
  </div>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="row form">

    </div>
  </div>
</div>
