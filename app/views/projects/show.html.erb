
<div class="row">
  <div class="form" style="text-align:center;">
    <h1><%= @project.name %></h1>
  </div>

  <div class="col-xs-1 col-xs-offset-10">
    <% if is_admin?(current_user, @project)%>
      <%= link_to "Admin", profile_project_admin_index_path(current_user.profile, @project), id: "Admin", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-7 col-xs-offset-1">
    <div class="row" style="margin-bottom:12px;">
      <button class="btn btn-lg btn-danger" id="bugButton">Bugs</button>
      <button class="btn btn-lg btn-primary" id="taskButton">Tasks</button>
      <div style="float:right;">
        <%= link_to "Add", new_profile_project_issue_path(current_user.profile, @project), class: "btn btn-primary", id: "newIssueButton" %> </div>
      </div>
    <% @my_issues.each do |i| %>
      <% if i.status == "Open" %>
        <% if i.issue_type == "Bug" %>
          <div class="Bugs">
            <%= render "issues/issueframe", object: i %>
          </div>
        <% else %>
          <div class="Tasks" hidden>
            <%= render "issues/issueframe", object: i %>
          </div>
        <%end%>
      <%end%>
    <%end%>
  </div>
  <div class="col-xs-3 col-xs-offset-0">
    <h2>Users</h2>
    <% @project.profiles.each do |pr| %>
      <p class="form">
        <% if is_admin?(User.find(pr.user_id), @project) %>
          <span class="danger-text">[Admin]</span> <%=User.find(pr.user_id).email%> (<%= pr.user_name %>)
        <%else%>
          <%=User.find(pr.user_id).email%> (<%= pr.user_name %>)
        <%end%>
      </p>
    <%end%>
  </div>
</div>
