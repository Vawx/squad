
<div class="container">
  <div class="col-xs-10 col-xs-offset-1">
    <% @projects.each do |p| %>
      <div class="row project frame">
        <%= link_to profile_project_path(current_user.profile, p), class: "projectHeader" do %>
          <h1 style="text-align:center;"><%= p.name %></h1>
        <%end%>

        <% if is_admin?(current_user, p) %>
          <h6 class="danger-text" style="text-align:right;">Admin: You </h6>
        <%else%>
          <h6 class="danger-text" style="text-align:right;">Admin: <%= User.find( p.admin_id ).email %></h6>
        <%end%>
      </div>
    <%end%>
    <div class="" style="text-align:right">
      <%= link_to "Add New", new_profile_project_path(current_user.profile), class: "btn btn-primary" %>
    </div>
  </div>
</div>
